<?xml version="1.0" encoding="utf-8" ?>
    <ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             x:Class="Products.Views.UbicationsView"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             BackgroundColor="{StaticResource BackGroundColor}"
             Title="Ubications">
        
    <ContentPage.Content>
        <!-- 
            x:Name="MyMap"          Nombre del Mapa
            IsShowingUser="true"    Muestra la Ubicacion Actual del Usuario
            MapType="Street">       Tipo de Mapa (Calle)
        -->
        <StackLayout BindingContext="{Binding Ubications}">
            <maps:Map 
                x:Name="MyMap"
                IsShowingUser="true"
                MapType="Street">
            </maps:Map>
        </StackLayout>
        
    </ContentPage.Content>

</ContentPage>